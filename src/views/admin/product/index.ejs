<div class="container mt-2">
    <div class="flex items-center justify-end">
        <a class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 
        font-medium rounded-md text-sm px-4 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 
        dark:focus:ring-blue-800 h-10 flex items-center justify-center" href="/admin/product/create">Add</a>
    </div>
    <div class="container-table mx-2">
        <table class="table table-striped table-hover data-table" style="max-width: 1300px;">
            <thead style="background-color: #07497c; color: white;">
                <tr>
                    <th class="text-center" colspan="4">Product manager</th>
                </tr>
                <tr>        
                    <th>Name</th>
                    <th style="text-align: left;">Price</th>
                    <th style="text-align: center;">Detail</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td style="text-align: left;"><%= formatCurrency(product.price) %></td>
                        <td class="flex justify-center items-center">
                            <a class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 
                            font-medium rounded-md text-sm px-4 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 
                            dark:focus:ring-blue-800 h-10 flex items-center justify-center w-fit" href="/admin/product/show/<%= product.id %>">Detail</a>
                        </td>
                        <td>
                            <div class="flex justify-center items-center gap-2">
                                <a class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 
                                font-medium rounded-md text-sm px-4 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 
                                dark:focus:ring-blue-800 h-10 flex items-center justify-center">Edit</a>
                                <a class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 
                                font-medium rounded-md text-sm px-4 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 
                                dark:focus:ring-red-900 h-10 flex items-center justify-center">Delete</a>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>