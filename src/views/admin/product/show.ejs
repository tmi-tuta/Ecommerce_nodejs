<div class="container mt-5">
  <div class="row">
    <div class="col-lg-7 text-center mb-4">
      <div class="border p-3 rounded div-image-prd-detail">
        <img id="mainImage" src="<%= product.image.replace('src/', '') %>" alt="Product" class="main-image">
      </div>
      <div class="d-flex justify-content-center mt-3">
        <div class="p-2">
          <img src="<%= product.image.replace('src/', '') %>" alt="Product2" class="thumbnail">
        </div>
        <% images.forEach(subImage => { %>
          <div class="p-2">
            <img src="<%= subImage.image.replace('src/', '') %>" alt="Product2" class="thumbnail">
          </div>
        <% }) %>
      </div>
    </div>
    <div class="col-lg-5">
      <h2 class="fw-bold"><%= product.name %> | <%= product.type_id.name %></h2>
      <div class="mt-4">
        <h5 class="font-weight-bold">Giá:</h5>
        <p><%= formatCurrency(product.price) %></p>
      </div>
      <hr>
      <div class="mt-3">
        <h5 class="fw-bold">Thông tin chi tiết</h5>
        <p><strong>Loại:</strong> <%= product.type_id ? product.type_id.name : '' %></p>
        <p><strong>Thương hiệu:</strong> <%= product.brand_id ? product.brand_id.name : '' %></p>
        <% attributes.forEach(attributeProduct => { %>
          <p><strong><%= attributeProduct.attribute_id.name %>:</strong> <%= attributeProduct.attribute_id.description %></p>
        <% }) %>
        <div>
          <strong>Màu sắc:</strong>
          <% colors.forEach(color => { %>
            <input type="color" value="<%= color.color_id.color %>" disabled>
          <% }) %>
        </div>
      </div>
      <hr>
      <div class="mt-3">
        <h5 class="fw-bold">Miêu tả</h5>
        <p><%= product.description %></p>
      </div>
    </div>
  </div>
</div>