<div class="container mt-2">
    <div class="flex items-center justify-end gap-2">
        <a class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 
        font-medium rounded-md text-sm px-4 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 
        dark:focus:ring-blue-800 h-10 flex items-center justify-center" href="/admin/event_product/create">Thêm sản phẩm</a>
        <a class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 
        font-medium rounded-md text-sm px-4 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 
        dark:focus:ring-blue-800 h-10 flex items-center justify-center" href="/admin/event/create">Thêm</a>
    </div>
    <div class="container-table mx-2">
        <table class="table table-striped table-hover data-table" style="max-width: 1300px;">
            <thead style="background-color: #07497c; color: white;">
                <tr>
                    <th class="text-center" colspan="7">Quản lý sự kiện</th>
                </tr>
                <tr>        
                    <th>Tiêu đề</th>
                    <th style="text-align: left;">Miêu tả</th>
                    <th style="text-align: center;">Giảm giá</th>
                    <th class="text-center">Banner</th>
                    <th class="text-center">Ngày bắt đầu</th>
                    <th class="text-center">Ngày kết thúc</th>
                    <th class="text-center">Hoạt động</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach(event => { %>
                    <tr>
                        <td><%= event.title %></td>
                        <td><%= event.description %></td>
                        <td class="text-center"><%= event.discount %>%</td>
                        <td>
                            <img src="/uploads/<%= event.image %>">
                        </td>
                        <td class="text-center">
                            <%= event.formatted_start_date %>
                        </td>
                        <td class="text-center">
                            <%= event.formatted_end_date %>
                        </td>
                        <td>
                            <div class="flex justify-center items-center gap-2">
                                <a class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 
                                font-medium rounded-md text-sm px-4 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 
                                dark:focus:ring-blue-800 h-10 flex items-center justify-center" href="/admin/event/<%= event.id %>/edit">Sửa</a>
                                <a class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 
                                font-medium rounded-md text-sm px-4 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 
                                dark:focus:ring-red-900 h-10 flex items-center justify-center" href="/admin/event/<%= event.id %>/delete">Xóa</a>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>