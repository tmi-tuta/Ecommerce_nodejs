<div class="max-w-md mx-auto mt-20">
    <form action="/post-register" method="POST" class="bg-white p-8 rounded shadow-md">
        <h2 class="text-2xl mb-6 text-center">Đăng ký tài khoản</h2>
        <div class="mb-4">
            <label for="username" class="block text-sm font-bold mb-2">Họ và tên</label>
            <input type="text" name="name" id="username" class="w-full p-2 border rounded" required>
        </div>
        <div class="mb-4">
            <label for="phone-number" class="block text-sm font-bold mb-2">Điện thoại</label>
            <input type="text" name="phone" id="phone-number" class="w-full p-2 border rounded" required>
        </div>
        <div class="mb-4">
            <label for="email" class="block text-sm font-bold mb-2">Email</label>
            <input type="email" name="email" id="email" class="w-full p-2 border rounded" required>
            <input type="hidden" name="user_role" value="3">
        </div>
        <div class="mb-4">
            <label for="password" class="block text-sm font-bold mb-2">Mật khẩu</label>
            <input type="password" name="password" id="password" class="w-full p-2 border rounded" required>
        </div>
        <div class="mb-4">
            <label for="confirmPassword" class="block text-sm font-bold mb-2">Xác nhận mật khẩu</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="w-full p-2 border rounded" required>
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded">Đăng ký</button>
    </form>
</div>