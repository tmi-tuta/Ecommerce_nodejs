<div class="cart_section">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cart_container">
                    <div class="cart_title">Giỏ hàng</div>
                    <div class="cart_items">
                        <% if(cartProduct != null){ cartProduct.forEach(function(item){ %>
                            <ul class="cart_list">
                                <li class="cart_item clearfix">
                                    <div class="cart_item_image">
                                        <img src="<%= item.item.image.replace('src/', '') %>" alt="">
                                    </div>
                                    <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                        <div class="cart_item_name cart_info_col">
                                            <div class="cart_item_title">Tên</div>
                                            <div class="cart_item_text"><%= item.item.name %></div>
                                        </div>
                                        <div class="cart_item_color cart_info_col">
                                            <div class="cart_item_title">Màu sắc</div>
                                            <div class="cart_item_text"><span style="background-color:#999999;"></span>Silver</div>
                                        </div>
                                        <div class="cart_item_quantity cart_info_col">
                                            <div class="cart_item_title">Số lượng</div>
                                            <div class="cart_item_text"><%= item.qty %></div>
                                        </div>
                                        <div class="cart_item_price cart_info_col">
                                            <div class="cart_item_title">Đơn giá</div>
                                            <div class="cart_item_text"><%= formatCurrency(item.item.price) %></div>
                                        </div>
                                        <div class="cart_item_total cart_info_col">
                                            <div class="cart_item_title">Tổng cộng</div>
                                            <div class="cart_item_text"><%= formatCurrency(item.item.price*item.qty) %></div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        <%})}%>
                    </div>
                    
                    <!-- Order Total -->
                    <div class="order_total">
                        <div class="order_total_content text-md-right">
                            <div class="order_total_title">Tổng số đơn hàng:</div>
                            <div class="order_total_amount"><%= formatCurrency(session.cart.totalPrice) %></div>
                        </div>
                    </div>

                    <div class="cart_buttons">
                        <button type="button" class="button cart_button_clear">xóa</button>
                        <button type="button" class="button cart_button_checkout">Mua Hàng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>