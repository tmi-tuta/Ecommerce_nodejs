<div id="tt-pageContent">
    <div class="container-indent">
      <div class="container">
        <h1 class="tt-title-subpages noborder">GIỎ HÀNG</h1>
        <div class="tt-shopcart-table-02">
          <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Tên</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Tổng cộng</th>
                </tr>
            </thead>
            <tbody>
              <% if(cartProduct != null){ cartProduct.forEach(function(item){
              %>
              <tr>
                <td>
                  <div class="tt-product-img">
                    <img src="<%= item.item.image.replace('src/', '') %>" alt="image-prd">
                  </div>
                </td>
                <td>
                  <h2 class="tt-title">
                    <a href="/product/<%= item.item._id %>"><%= item.item.name %></a>
                  </h2>
                  <ul class="tt-list-description">
                    <li>Màu: Green</li>
                  </ul>
                  <ul class="tt-list-parameters">
                    <li>
                      <div class="tt-price">
                        <%= formatCurrency(item.item.price) %>
                      </div>
                    </li>
                    <li>
                      <div class="detach-quantity-mobile"></div>
                    </li>
                    <li>
                      <div class="tt-price subtotal">
                        <%= formatCurrency(item.price) %>
                      </div>
                    </li>
                  </ul>
                </td>
                <td>
                  <div class="tt-price">
                    <%= formatCurrency(item.item.price) %>
                  </div>
                </td>
                <td>
                  <div class="detach-quantity-desctope">
                    <div class="tt-input-counter style-01" data-id="<%= item.item._id %>">
                      <span class="minus-btn">-</span>
                      <input class="input-quantity" type="text" value="<%= item.qty %>" size="20" />
                      <span class="plus-btn">+</span>
                    </div>
                  </div>
                </td>

                <td class="box-pricei<%= item.item._id %>">
                  <div class="tt-price subtotal">
                    <%= formatCurrency(item.price) %>
                  </div>
                </td>

                <td>
                  <a href="/cart/delete-item/<%= item.item._id %>" class="tt-btn-close">Xoá</a>
                </td>
              </tr>
              <% })} %>
            </tbody>
          </table>
          <div class="tt-shopcart-btn">
            <div class="col-left">
              <a class="btn-link" href="/home">
                <i class="icon-e-19"></i>Tiếp tục mua sắm</a>
            </div>
            <div class="col-right">
                <a class="btn-link" href="/cart/delete-cart">
                    <i class="icon-h-02"></i>Xoá giỏ hàng
                </a>
                <a class="btn-link" href="/cart/shopping-cart">
                    <i class="icon-h-48"></i>Cập nhật giỏ hàng
                </a>
            </div>
          </div>
        </div>
        <div class="tt-shopcart-col">
          <div class="row">
            <div class="col-md-6 col-lg-4"></div>
            <div class="col-md-6 col-lg-4"></div>
            <div class="col-md-6 col-lg-4">
              <div class="tt-shopcart-box tt-boredr-large">
                <table class="tt-shopcart-table01 box-pricett">
                  <tbody>
                    <tr>
                      <th>Tổng hàng</th>
                      <td><%= formatCurrency(session.cart.totalPrice) %></td>
                    </tr>
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>Tổng tất cả</th>
                      <td><%= formatCurrency(session.cart.totalPrice) %></td>
                    </tr>
                  </tfoot>
                </table>
                <% if(session.cart.numItems != 0){ %>
                <%if (isLoggedIn) { %>
                  <a href="/cart/add-order" class="btn btn-lg">
                    <span class="icon icon-check_circle"></span>Chấp nhận thanh toán
                  </a>
                <% } else if(!isLoggedIn) { %>
                  <a href="/login" class="btn btn-lg">
                    <span class="icon icon-check_circle"></span>Đăng nhập để thanh toán
                  </a>
                <% } else if(!isLoggedIn) { %>
                <a href="/verify-email" class="btn btn-lg">
                  <span class="icon icon-check_circle"></span>Kích hoạt email để thanh toán</a>
                <% }} else  {%>
                  <a href="javascript:void(0)" class="btn btn-lg">
                    <span class="icon icon-check_circle"></span>Giỏ hàng rỗng!!
                  </a>
                <%}%>
              </div>  
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>